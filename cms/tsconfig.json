{
    "compilerOptions": {
        "outDir": "./dist/",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": false,
        "jsx": "react-jsx",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": false,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "baseUrl": "./src",
        "paths": {
            "@assets/*": [
                "assets/*"
            ],
            "@const/*": [
                "const/*"
            ],
            "@core/*": [
                "core/*"
            ],
            "@hooks/*": [
                "hooks/*"
            ],
            "@common/*": [
                "main/common/*"
            ],
            "@components/*": [
                "main/components/*"
            ],
            "@containers/*": [
                "main/containers/*"
            ],
            "@pages/*": [
                "pages/*"
            ],
            "@service/*": [
                "service/*"
            ],
            "@translations/*": [
                "translations/*"
            ],
        },
    },
    "include": [
        "src/**/*",
        "pages",
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}